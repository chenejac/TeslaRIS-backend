{
  "analysis": {
    "analyzer": {
      "serbian": {
        "type": "custom",
        "tokenizer": "icu_tokenizer",
        "filter": [
          "icu_folding",
          "lowercase",
          "serbian_stop",
          "serbian_stemmer"
        ]
      },
      "serbian_simple": {
        "type": "custom",
        "tokenizer": "standard",
        "filter": [
          "serbian_latinic_to_cyrillic",
          "icu_folding",
          "lowercase"
        ]
      }
    },
    "filter": {
      "serbian_stop": {
        "type": "stop",
        "stopwords": "_serbian_"
      },
      "serbian_stemmer": {
        "type": "stemmer",
        "language": "serbian"
      },
      "serbian_latinic_to_cyrillic": {
        "type": "icu_transform",
        "id": "Any-Latin; NFD; [:Nonspacing Mark:] Remove; NFC"
      }
    }
  }
}